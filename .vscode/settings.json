{
    "workbench.sideBar.location": "left",
    "editor.rulers": [
        79
    ],
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    "editor.fontSize": 15,

    /* TODO Highlight setting */
    "todohighlight.keywords": [
        // TODO: FIXME:
        {
            "text": "NOTE:",
            "color": "#ffffff",
            "backgroundColor": "#008080",
            "isWholeLine": "true"
        },
        {
            "text": "HACK:",
            "color": "#ffffff",
            "backgroundColor": "#9932CC"
        },
        {
            "text": "XXX:",
            "color": "#ffffff",
            "backgroundColor": "#DC143C"
        }
    ],

    /* Markdown */
    "markdown.preview.fontSize": 13,
    "markdown.preview.lineHeight": 1.4,

    /* Terminal */
    // "terminal.integrated.lineHeight": 1.1,
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.fontFamily": "Consolas",
    // "terminal.integrated.fontFamily": "Monaco, Menlo, 'Courier New', monospace" // Mac
    "workbench.colorCustomizations": {
        // Borders
        "editor.findMatchBorder": "#ffff00",
        "editor.findMatchHighlightBorder": "#e45615",
        "editor.selectionHighlightBorder": "#ffffff",
        "editor.lineHighlightBorder": "#383737",
        // Selection
        "editor.selectionBackground": "#0a073a",
        "editor.wordHighlightBackground": "#0a073a"
    }
}